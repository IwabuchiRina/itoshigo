<h2>日記情報</h2>

<div class="row">
  <div class="col-3">
    <p>ペット</p>
  </div>
  <div class="col-9">
    <%= if @post.pet.present? %>
      <p><%= @post.pet.name %></p>
    <%= else %>
      <p>なし</p>
    <%= end %>   
  </div>
</div>
<div class="row">
  <div class="col-3">
    <p>タイトル</p>
  </div>
  <div class="col-9">
    <p><%= @post.title %></p>    
  </div>
</div>
<div class="row">
  <div class="col-3">
    <p>本文</p>
  </div>
  <div class="col-9">
    <p><%= @post.content %></p>    
  </div>
</div>
<div class="row">
  <div class="col-3">
    <p>ステータス</p>
  </div>
  <div class="col-9">
    <p><%= @post.status_text() %></p>    
  </div>
</div>
<div class="row">
  <div class="col-3">
    <p>作成日</p>
  </div>
  <div class="col-9">
    <p><%= @post.created_at.strftime("%Y-%m-%d") %></p>    
  </div>
</div>