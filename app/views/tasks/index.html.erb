<h2>タスク一覧</h2>

<div class="row">
  <div class="col-9">
  </div>
  <div class="col-3">
    <a href="/tasks/new">タスク情報追加</a>
  </div>
</div>

<div class="row">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">やること</th>
      <th scope="col">期日</th>
      <th scope="col">状況</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.plan_date.strftime("%Y-%m-%d") %></td>
      <td>
        <% if task.is_completed == 1 %>
          完了済み
        <% else %>
          <button>完了にする</button>
        <% end %>
      </td>
       <td><a href="<%= task_path(task.id) %>">詳細</a></td>
       <td><a href="<%= edit_task_path(task.id) %>">編集</a></td>
    </th>
    <% end %>
  </tbody>
</table>
</div>
