<h2>タスク一覧</h2>

<div class="row">
  <div class="col-9">
  </div>
  <div class="col-3">
    <a href="/tasks/new">タスク情報追加</a>
  </div>
</div>

<div class="row">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">やること</th>
      <th scope="col">期日</th>
      <th scope="col">状況</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <th scope="row"><a href="<%= edit_task_path(task.id) %>"><%= task.id %></a></th>
      <td><%= task.name %></td>
      <td><%= task.plan_date %></td>
      <td>
        <%= if task.is_completed %>
          完了済み
        <% else %>
          <button>完了にする</button>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
